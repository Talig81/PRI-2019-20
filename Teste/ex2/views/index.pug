extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container-teal
        h2 Lista de Tipologias
      .w3-container
        if (lista.length > 0)
          table.w3-table-all
            tr
              th Estado
              th Sigla
              th Designacao
              th id
            each l in lista
              tr
                td= l.estado
                td= l.sigla
                td= l.designacao
                td
                  a(id='l_'+l.id href="http://localhost:3000/getId/"+l.id)= l.id
        else
          p NÃ£o Ha tipologias
      footer.w3-container-teal
        h4 Manuel Moreno
              

