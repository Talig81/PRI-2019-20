extends layout

block content
   .w3-container
        .w3-card-4
            header.w3-container.w3-purple
              h1 Gestor de Aluno
            .w3-container
              form.w3-container(action='/alunos' method='POST' id='myform')
                table
                  tr
                    th Id
                    th Nome
                    th Notas
                    th
                  tr
                    td
                      input(type="text" name="id" form='myform')
                    td
                      input(type="text" name="nome" form='myform')
                    td 
                      input(type="text" name="notas" form='myform')
                    td
                      input.w3-btn.w3-blue-grey(type='submit' align="center" value='Adicionar Aluno')
            hr(style={'border': '5px solid purple'})
            .w3-container
              h3 Lista dos Alunos
              .w3-container
                table.w3-table-all
                  tr
                    th Id
                    th Nome
                    th Notas
                    th Operações
                  each aluno in lista
                    tr
                      td= aluno.id
                      td= aluno.nome
                      td= aluno.notas
                      td
                        button.w3-button.w3-square.w3-blue-grey(onclick="apagarItem('"+aluno.id+"')") Apagar
              footer.w3-container.w3-teal
                address Gerado por M.Moreno